extends layout

block content

  .row
    .col-lg-12
      h2= fix.name

  .row
    .col-md-6 
        h3 Status        
        if (fix.status == 'Fixed')
            h4
              span.badge.badge-success= fix.status
          else if (fix.status == 'Fixing')
            h4
              span.badge.badge-primary= fix.status
          else
            h4
              span.badge.badge-danger= fix.status
        h3 Knowledge Required
        h4
          each skill in fix.skills
            span.badge.badge-primary= skill 
            &nbsp;          
        h3 Summary
        p= fix.summary
        h3 Full Description
        p= fix.description
        
    .col-md-6
        h3 Upvotes
          h4= fix.upvotes
        h3 Comments
        each comment in fix.comments
          .card.text-white.bg-primary.mb-3(style='min-width: 100%;')
            .card-header 30/10/2019 20:30
            .card-body
              h4.card-title= comment.name
              p.card-text= comment.comment
        a.btn.btn-success.float-right(href= fix._id + '/comment/new') Add New Comment