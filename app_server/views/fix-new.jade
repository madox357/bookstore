
extends layout

block content
  .row
    .col-lg-12
      h2= title
      form(method='POST', action='')
        fieldset
          legend New Fix Request
          .form-group
            label(for='inputName') Name
            input#inputName.form-control(aria-describedby='nameHelp', type='text', placeholder='Enter name', name='name')
            small#nameHelp.form-text.text-muted This is the name of your problem.
          .form-group
            label(for='inputSummary') Summary
            textarea#textareaSummary.form-control(rows='2', name='summary')
          .form-group
            label(for='inputDescription') Description
            textarea#textareaDescription.form-control(rows='6', name='description')
          .form-group
            label(for='inputSkills') Skills
            textarea#textareaSkills.form-control(rows='1', name='skills')  
          input.btn.btn-success(type='submit', value='Submit')